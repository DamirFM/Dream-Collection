{
  "compilerOptions": {
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ], // Ensure "./types" is included
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/withClickOutside.js",
    "lib/mongodb.tsx",
    "app/api/posts/route.ts",
    "models/post.ts",
    "lib/mongodb.ts",
    "app/api/auth/[...nextauth]/route.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "types/next-auth.d.ts" // Ensure this is included correctly
  ],
  "exclude": [
    "node_modules"
  ]
}
